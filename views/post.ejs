<link rel="stylesheet" href="<%= assetPath('/css/post.css') %>" />
<div class="posts">
  <% for( let i = 0; i < 5; i++ ) { %>
  <div class="post">
    <div class="post-header">
      <div class="display_pic">
        <!-- <i class="fas fa-user-circle"></i> -->
        <% if (user.avatar) { %>
          <img src="<%= user.avatar %>" alt="" />
        <% } else { %>
        <img src="<%= assetPath('/images/default_user.jpeg') %>" alt="" />
        <% } %>
      </div>
      <div class="display_name_time">
        <div class="display_name">Divya Choudhary</div>
        <div class="display_time">
          <div>April 21, 2021</div>
          <!-- <div>21:30</div> -->
        </div>
      </div>
      <div class="delete-post">
        <i class="fa-solid fa-trash-can"></i>
      </div>
    </div>
    <div class="post-body">
      <!-- <div class="post-item">
        <div class="content">Hello world!</div>
        <div class="read-more">...Read more</div>
      </div> -->
      <div class="post-image">
        <img src="<%= assetPath('/images/home-page.jpg') %>" alt="" />
      </div>
    </div>
    <div class="post-footer">
      <div class="likes">
        <div class="icon">
          <!-- <i class="far fa-heart"></i> -->
          <i class="fas fa-heart liked"></i>
        </div>
        <div
          class="count"
          data-bs-toggle="modal"
          data-bs-target="#modalReactions"
          data-id="<%= i %>"
        >
          298
        </div>
      </div>
      <div
        class="comments"
        data-bs-toggle="modal"
        data-bs-target="#modalComments"
        data-id="<%= i %>"
      >
        <div class="icon">
          <i class="fas fa-comment-dots"></i>
        </div>
        <div class="count">36</div>
      </div>
    </div>
  </div>
  <% } %>
</div>

<div
  class="modal fade"
  id="modalReactions"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Reactions</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button>
        <!-- <button type="button" class="btn btn-primary">Save changes</button> -->
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="modalComments"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Comments</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
          Close
        </button> -->
        <input
          type="text"
          placeholder="Comment..."
          style="flex-grow: 1"
          name="input-comment"
          id="input-comment"
        />
        <button class="send-button"><i class="fas fa-share-square"></i></button>
      </div>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="modalAddPost"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <form action="/post/create" enctype="multipart/form-data" method="post" onsubmit="submitForm(this, event)">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="exampleModalLabel">New Post</h1>
          <button
            type="button"
            class="btn-close"
            data-bs-dismiss="modal"
            aria-label="Close"
          ></button>
        </div>
        <div class="modal-body">
          <div>
            <input
              type="file"
              accept="image/png, image/jpeg"
              name="post"
              class="form-control"
              required
            />
          </div>
          <!-- <div>
            <textarea
              class="form-control"
              name="post_content"
              id=""
              cols="30"
              rows="10"
              placeholder="Enter text..."
            ></textarea>
          </div> -->
        </div>
        <div class="modal-footer">
          <button
            type="button"
            class="btn btn-secondary"
            data-bs-dismiss="modal"
          >
            Cancel
          </button>
          <button type="submit" class="btn btn-success">Post</button>
        </div>
      </div>
    </div>
  </form>
</div>

<script src="<%= assetPath('/js/post.js') %>"></script>
