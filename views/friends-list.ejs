<link rel="stylesheet" href="<%= assetPath('/css/friends-list.css') %>" />
<div class="friends-list">
  <% for( let i = 0; i < 50; i++ ) { %>
  <div class="friend">
    <div class="display_pic">
      <!-- <i class="fas fa-user-circle"></i> -->
      <img src="<%= assetPath('/images/home-page.jpg') %>" alt="" />
    </div>
    <div class="display_name">Divya Choudhary</div>
    <% if (locals.add_friend) { %>
    <div class="add-friend-icon">
      <button class="btn btn-sm">Add Friend</button>
    </div>
    <% } else if (locals.received_request) { %>
    <div class="add-friend-icon">
      <button class="btn btn-sm">Accept</button>
    </div>
    <% } else if (locals.sent_request) { %>
    <div class="add-friend-icon">
      <button class="btn btn-sm">Unsend</button>
    </div>
    <% } else {%>
    <div
      class="message-icon"
      data-bs-toggle="modal"
      data-bs-target="#modalChatbox"
      data-id="<%= i %>"
    >
      <i class="fa-solid fa-message"></i>
      <!-- <i class="fa-solid fa-circle-plus"></i> -->
    </div>
    <% } %>
  </div>
  <% } %>
</div>

<div
  class="modal fade"
  id="modalChatbox"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">Chat Box</h1>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
          aria-label="Close"
        ></button>
      </div>
      <div class="modal-body"></div>
      <div class="modal-footer">
        <input
          type="text"
          placeholder="message..."
          style="flex-grow: 1"
          name="input-message"
          id="input-message"
        />
        <button class="send-button">
          <i class="fa-solid fa-paper-plane"></i>
        </button>
      </div>
    </div>
  </div>
</div>

<!-- <div class="chatbox" id="chatbox"></div> -->

<script src="<%= assetPath('/js/friends-list.js') %>"></script>
