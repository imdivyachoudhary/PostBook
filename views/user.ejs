<link rel="stylesheet" href="<%= assetPath('/css/user.css') %>" />

<div id="main-body">
  <div class="flex height-main">
    <div class="col-profile" id="profile">
      <div class="center">
        <h1>Profile</h1>
        <div class="width-full" id="profileBox"></div>
      </div>
    </div>
    <div class="col-posts" id="posts">
      <div class="flex flex-center-horizontal">
        <div class="heading">
          <div class="btn btn-success add-post" data-bs-toggle="modal" data-bs-target="#modalAddPost">
            <i class="fa-solid fa-plus"></i>
          </div>
          <h1>Posts</h1>
        </div>
        <div class="width-full" id="allPosts"></div>
      </div>
    </div>
    <div class="col-friends" id="friends">
      <div class="flex flex-center-horizontal">
        <h1>Friends</h1>
        <div class="width-full" id="profileBox"><%- include('friends-list') %></div>
      </div>
    </div>
  </div>
</div>

<script src="<%= assetPath('/js/user.js') %>"></script>
